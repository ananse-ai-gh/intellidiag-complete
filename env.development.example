# Development Environment Variables
# Copy this to .env.local for local development

# Database Configuration
# Set to 'false' to use SQLite for development
USE_SUPABASE=false

# Supabase Configuration (only needed if USE_SUPABASE=true)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Secret (keep this secure)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Optional: For file uploads (if using Supabase Storage)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=your-storage-bucket-name
